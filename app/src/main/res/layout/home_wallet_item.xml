<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/walletName"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:background="@drawable/layout_border"
    android:padding="6dp">

    <TextView
        android:id="@+id/home_wallet_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WalletName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_wallet_item_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Balance"
        app:layout_constraintStart_toStartOf="@+id/home_wallet_item_name"
        app:layout_constraintTop_toBottomOf="@+id/home_wallet_item_name" />
</androidx.constraintlayout.widget.ConstraintLayout>